root = true

# ===========================
# Defaults
# ===========================
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ===========================
# End of line policy
# ===========================
# Por defecto, usa LF (coincide con yml/md/sql/json). VS respetará .gitattributes para CRLF donde corresponda.
[*]
end_of_line = lf

# Archivos típicos de Windows/VS con CRLF
[*.{sln,csproj,vcxproj,props,targets,config,resx,ps1,bat,cmd,nuspec}]
end_of_line = crlf

# Cross-platform (LF, indent 2)
[*.{yml,yaml,json,md,sh,sql,editorconfig,svg}]
end_of_line = lf
indent_size = 2

# ===========================
# Visual Studio solution
# ===========================
[*.sln]
indent_style = tab

# ===========================
# C# code style (NET Framework 4.8 / C# 7.3)
# ===========================
[*.cs]
# system using first
dotnet_sort_system_directives_first = true

# this. calificador
dotnet_style_qualification_for_field = false
dotnet_style_qualification_for_property = false
dotnet_style_qualification_for_method = false
dotnet_style_qualification_for_event = false

# new lines / braces
csharp_new_line_before_open_brace = all
csharp_new_line_between_query_expression_clauses = true

# indentación y switches
csharp_indent_case_contents = true
csharp_indent_labels = one_less_than_current
csharp_indent_switch_labels = true

# preferencias var
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion

# cuerpo de expresión (permitir solo cuando sea breve)
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = when_on_single_line:suggestion
csharp_style_expression_bodied_accessors = when_on_single_line:suggestion

# using directives fuera del namespace (mejor diffs)
csharp_using_directive_placement = outside_namespace:suggestion

# patrones / null
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion
dotnet_style_prefer_conditional_expression_over_assignment = true:suggestion
dotnet_style_prefer_conditional_expression_over_return = true:suggestion

# ===========================
# PowerShell
# ===========================
[*.ps1]
indent_size = 2

# ===========================
# SQL
# ===========================
[*.sql]
indent_size = 2