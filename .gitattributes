# ===========================
# Core normalization
# ===========================
* text=auto

# ===========================
# Windows/VS text files (CRLF)
# ===========================
*.sln           text eol=crlf
*.cs            text eol=crlf
*.Designer.cs   text eol=crlf linguist-generated=true
*.csproj        text eol=crlf
*.props         text eol=crlf
*.targets       text eol=crlf
*.config        text eol=crlf
*.resx          text eol=crlf linguist-generated=true
*.ps1           text eol=crlf
*.bat           text eol=crlf
*.cmd           text eol=crlf

# ===========================
# Cross-platform text (LF)
# ===========================
*.sh            text eol=lf
*.yml           text eol=lf
*.yaml          text eol=lf
*.md            text eol=lf
*.json          text eol=lf
*.sql           text eol=lf linguist-language=SQL

# ===========================
# Binary assets
# ===========================
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.pdf   binary
*.zip   binary
*.7z    binary
*.docx  binary
*.xlsx  binary
*.pptx  binary